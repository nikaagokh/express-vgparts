    <link rel="stylesheet" href="/public/css/styles.css">
</head>

<body class="{{detectMode mode}}">
    {{>header}}
    <div class="app-container">
        <div class="product-container">
            <div class="product-wrapper">
                {{>gallery}}
                {{>price priceObj=(priceHelper product)}}
                {{>info}}
                {{>similars}}
            </div>
            <div class="product-hydration" style="display: none;">{{single}}</div>
        </div>
    </div>
    {{>bottom}}
    {{>fixedPrice}}
    {{>footer}}
    <div class="overlay-container"></div>
    <div class="toast-container"></div>
    <script src="/public/js/product.mjs" type="module"></script>
</body>