<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Document</title>
   <link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
   <link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
   <link rel="stylesheet" href="/public/css/styles.css">
</head>

<body class="{{detectMode mode}}">
   {{>header}}
   <div class="app-container">
      <div class="home-container">
         <!--
            <div class="banner-container">
              <img src="{{aurl 'banner.jpg'}}" class="banner-img">
            </div>
            -->
            <div class="banner-container">
               <img src="{{aurl 'logo.png'}}" class="banner-img">
            </div>
         {{>category}}
         {{>slider products=discounts category=slider.discounts hydration=(json discounts) path="discounted"}}
         {{>slider products=priuses category=slider.priuses hydration=(json priuses) path="prius"}}
         {{>slider3d products=populars hydration=(json populars) path="popular"}}
      </div>
      <div class="home-skeleton" style="display:none;">
         <div class="cards">
            <div class="card is-loading full">
               <div class="image mob"></div>
               <div class="content">
                  <h2 class="line"></h2>
                  <p class="line more"></p>
               </div>
            </div>
            <div class="cardbody">
               <div class="wrapper">
                  <h2 class="line one"></h2>
                  <h2 class="line two"></h2>
               </div>
               <div class="wrapper">
                  <h2 class="line one"></h2>
                  <h2 class="line two"></h2>
               </div>
               <div class="wrapper">
                  <h2 class="line one"></h2>
                  <h2 class="line two"></h2>
               </div>
               <div class="wrapper">
                  <h2 class="line one"></h2>
                  <h2 class="line two"></h2>
               </div>
               <div class="wrapper">
                  <h2 class="line one"></h2>
                  <h2 class="line two"></h2>
               </div>
            </div>
         </div>
      </div>
   </div>
   {{> bottom}}
   {{> footer}}
   <div class="overlay-container"></div>
   <div class="toast-container"></div>
   <div class="products-hydration" style="display: none;">{{serializedProducts}}</div>
   <script src="/public/js/index.js" type="module"></script>
</body>

</html>