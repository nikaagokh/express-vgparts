<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="/public/css/styles.css">
</head>

<body class="{{detectMode mode}}">
  {{>header}}
  <div class="app-container">
    <div class="category-container">
      <div class="category-wrapper">
        <section class="category-product-flex">
          {{#compare products.length '>' 0}}
          {{#each products as |product|}}
          <article class="app-slider__card">
            <a href="/{{../lng}}/product/{{product.id}}" class="app-slider__link" data-link>
              <div class="app-slider__image-wrapper">
                <img src="{{#if product.images.[0]}}{{purl product.images.[0]}}{{/if}}" class="app-slider__image"
                  width="120" height="60">
              </div>
              <div class="app-slider__product-desc">
                <h4 class="app-slider__product-title">{{product.nameGeo}}</h4>
                <div class="app-slider__product-available">
                  {{#if product.available}}
                  <i class="material-symbols-outlined app-slider__availability-icon">check</i>
                  {{#if product.type}}
                  <span>{{../store.in-stock}}</span>
                  {{else}}
                  <span>{{../store.in-stock}}</span>
                  {{/if}}
                  {{else}}
                  <i class="material-symbols-outlined app-slider__not-availability-icon">check_indeterminate_small</i>
                  {{#if product.type}}
                  <span>{{../store.out-stock}}</span>
                  {{else}}
                  <span>{{../store.out-stock}}</span>
                  {{/if}}
                  {{/if}}
                </div>
              </div>
              <div class="app-slider__product-price">
                {{product.price}}â‚¾
              </div>
            </a>
            <div class="app-slider__actions">
              <div class="flex">
                <button class="button button-icon" id="app-slider__zoom">
                  <i class="material-symbols-outlined">zoom_in</i>
                  <span class="tooltip">{{store.zoom-in}}</span>
                </button>
                <button class="button button-icon" id="app-slider__favorite">
                  <i class="material-symbols-outlined">favorite</i>
                  <span class="tooltip">{{store.favorites}}</span>
                </button>
              </div>
              <button class="button button-icon" id="app-slider__cart">
                <i class="material-symbols-outlined">shopping_bag</i>
                <span class="tooltip">{{store.cart}}</span>
              </button>
            </div>
          </article>
          {{/each}}
          {{else}}
          <div class="empty-container">
            <img src="{{aurl 'empty.jpg'}}" width="200px" height="100px">
            <div class="empty-text">{{errors.empty}}</div>
          </div>

          {{/compare}}
          <div class="products-hydration" style="display:none;">{{hydration}}</div>
        </section>
        <div class="pagination-container" id="paginationContainer" style="display: {{pagination pages}};">
          <div class="pagination-flex">
            <div class="prev pad{{#if isFirstPage}} inactive{{/if}}">
              <i class="arrow material-symbols-outlined{{#if isFirstPage}} inactive{{/if}}"
                data-page="{{prevPage}}">chevron_left</i>
            </div>
            {{#each pages}}
            <a href="/{{../lng}}/category?yearId={{../yearId}}&categoryId={{../categoryId}}&page={{this}}"
              class="number pad{{#if (isCurrentPage this ../page)}} active-pagination{{/if}}"
              data-page="{{this}}">{{this}}</a>
            {{/each}}
            <div class="next pad{{#if isLastPage}} inactive{{/if}}">
              <i class="arrow material-symbols-outlined{{#if isLastPage}} inactive{{/if}}"
                data-page="{{nextPage}}">chevron_right</i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{>bottom}}
  {{>footer}}
  <div class="overlay-container"></div>
  <div class="toast-container"></div>
  <script src="/public/js/category-parts.mjs" type="module"></script>
</body>

</html>